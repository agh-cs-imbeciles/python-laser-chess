<MenuView>:
    name: "menu"
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            id:menu_box
            orientation:'vertical'
            size_hint: 0.25,None
            on_size:root._update_width()
            Button:
                id: button_play_local
                text: "Play a local game"
                on_press:root.create_new_board(False)
                font_size:self.width/11
            Button:
                id: button_play_host
                text: "Host a game"
                on_press:root.create_new_board(True)
                font_size:self.width/11
            Button:
                id: button_play_online
                text: "Play an online game"
                on_press:root.create_new_board(True)
                font_size:self.width/11
