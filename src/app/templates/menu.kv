#:import PixelImage app.gui.PixelImage


<MenuView>:
    name: "menu"
    canvas.before:
        Color:
            rgba: 38 / 255., 35 / 255., 42 / 255., 1
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        BoxLayout:
            id: menu_box
            orientation: "vertical"
            size_hint: 0.75, None
            on_size: root._update_width()
            spacing: 16
            PixelImage:
                source: "./app/assets/images/laser_chess_logo.png"
                fit_mode: "contain"
                allow_stretch: True
            AnchorLayout:
                anchor_x: "center"
                BoxLayout:
                    orientation: "vertical"
                    size_hint: 0.5, None
                    Button:
                        id: button_play_local
                        text: "Play the local game"
                        on_press: root.create_new_board(False)
                        font_size: self.width / 20
                    Button:
                        id: button_play_online
                        text: "Play the online game"
                        on_press: root.pregame_popup(button_play_online)
                        font_size: self.width / 20
