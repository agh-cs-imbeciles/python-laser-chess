#: import ew kivy.uix.effectwidget

WindowManager:
    Menu:
    Board:

<Menu>:
    name: "menu"
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            id:menu_box
            orientation:'vertical'
            size_hint: 0.25,None

            on_size:root._update_width()
            Button:
                id:b1
                text: "Rozpocznij grę lokalną"
                on_press:root.manager.current="board"
                font_size:self.width/11
            Button:
                id:b2
                text: "Rozpocznij grę sieciową"
                on_press:root.manager.current="board"
                font_size:self.width/11



<Board>:
    id:"everything"
    name: "board"
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        id:anchor
        size_hint:1,1
        BoxLayout:
            id:whole
            size_hint: None, None
            BoxLayout:
                id:left_box
                size_hint: None, None
                orientation: 'vertical'
                CommonFontLabel:
                    id:indicator_lab
                    size_hint:(1,0.2)
                ScrollView:
                    id:scroll
                    effect_cls:"ScrollEffect"
                    size_hint:(1,1)
                    do_scroll_x: False
                    do_scroll_y: True
                    GridLayout:
                        id:notation
                        size_hint_y: None
                        height:self.minimum_height
                        width: self.minimum_width
                        cols:1
                        padding:20
                BoxLayout:
                    id:rotation_promotion_tab
                    orientation: 'horizontal'
                    size_hint:1,0.4
                    vertical_align:'top'
                    padding: 0, 10, 0, 50
                    spacing: 10

            BoxLayout:
                id:board_addit
                orientation: 'vertical'
                size_hint:None,None
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    BoxLayout:
                        id:top
                        size_hint:None,None
                        orientation: 'horizontal'
                BoxLayout:
                    id:mid
                    orientation: 'horizontal'
                    size_hint:None,None
                    BoxLayout:
                        id:left
                        #size_hint:0.1,1
                        size_hint:None,None
                        orientation: 'vertical'
                    GridLayout:
                        id:board
                        #size_hint:1,1
                        size_hint:None,None
                        cols:8
                        rows:8
                    BoxLayout:
                        id:right
                        size_hint:None,None
                        #size_hint:0.1,1
                        orientation: 'vertical'
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    BoxLayout:
                        id:bot
                        #size_hint_x:None
                        size_hint:None,None
                        #width: board.width
                        #pos:50,0
                        orientation: 'horizontal'


