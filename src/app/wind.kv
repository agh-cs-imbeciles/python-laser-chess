WindowManager:
    Menu:
    Board:

<Menu>:
    name: "menu"
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            id:menu_box
            orientation:'vertical'
            size_hint: 0.25,None
            on_size:root._update_width()
            Button:
                id: button_play_local
                text: "Rozpocznij grę lokalną"
                on_press:
                    root.manager.current="board"
                font_size:self.width/11
            Button:
                id: button_play_online
                text: "Rozpocznij grę sieciową"
                on_press: root.manager.current="board"
                font_size:self.width/11

<Board>:
    id:"everything"
    name: "board"
    AnchorLayout:

        anchor_x: 'center'
        anchor_y: 'center'
        id:anchor
        size_hint:1,1
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 216 / 255., 195 / 255., 88 / 255., 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            id:whole
            size_hint: 0,0
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: 100 / 255., 230 / 255., 88 / 20., 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id:left_box
                size_hint: 0.2, 1
                orientation: 'vertical'
                CommonFontLabel:
                    font_modificator:0.3
                    id:indicator_lab
                    size_hint:0.8,0.2
                ScrollView:
                    canvas.before:
                        Color:
                            rgba: 20 / 255., 200 / 255., 5 / 255., 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    id:scroll
                    effect_cls:"ScrollEffect"
                    size_hint:1,0.6
                    do_scroll_x: False
                    do_scroll_y: True
                    GridLayout:
                        id:notation
                        size_hint_y: None
                        height:self.minimum_height
                        cols:1
                        padding:20
                BoxLayout:
                    id:button_tab
                    size_hint:1,0.1

                BoxLayout:
                    id:rotation_promotion_tab
                    orientation: 'horizontal'
                    size_hint:1,0.3
                    vertical_align:'top'

            BoxLayout:
                id:board_addit
                orientation: 'vertical'
                size_hint:0.8,1
                AnchorLayout:
                    size_hint:1,0.1
                    anchor_x:'center'
                    BoxLayout:
                        id:top
                        size_hint:0.84,1
                        orientation: 'horizontal'
                BoxLayout:
                    id:mid
                    orientation: 'horizontal'
                    size_hint:1,0.8
                    BoxLayout:
                        id:left
                        size_hint:0.1,1
                        orientation: 'vertical'
                    GridLayout:
                        id:board
                        size_hint:1,1
                        cols:8
                        rows:8
                    BoxLayout:
                        id:right
                        size_hint:0.1,1
                        orientation: 'vertical'
                AnchorLayout:
                    size_hint:1,0.1
                    anchor_x:'center'
                    BoxLayout:
                        id:bot
                        size_hint:0.84,1
                        orientation: 'horizontal'


