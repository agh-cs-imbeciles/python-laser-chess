WindowManager:
    Menu:
    Board:

<Menu>:
    name: "menu"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        Button:
            id:b1
            text: "Rozpocznij grÄ™"
            font_size:self.width/8
            size_hint: 0.25,None
            on_press:root.manager.current="board"
            on_size:root._update_width()



<Board>:
    name: "board"
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        id:anchor
        size_hint:1,1
        size:500,500
        GridLayout:
            id:board
            size_hint:None,None
            width:min(self.parent.height,self.parent.width)
            height:min(self.parent.height,self.parent.width)
            cols:8
            rows:8






