#: import ew kivy.uix.effectwidget

WindowManager:
    Menu:
    Board:

<Menu>:
    name: "menu"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        Button:
            id:b1
            text: "Rozpocznij grÄ™"
            font_size:self.width/8
            size_hint: 0.25,None
            on_press:root.manager.current="board"
            on_size:root._update_width()



<Board>:
    name: "board"
    EffectWidget:
        effects: ew.FXAAEffect(), ew.HorizontalBlurEffect(size=0), ew.VerticalBlurEffect(size=0)
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            id:anchor
            size_hint:1,1
            BoxLayout:
                id:whole
                size_hint: None, None
                BoxLayout:
                    id:left_box
                    size_hint: None, None
                    width:
                    orientation: 'vertical'
                    Label:
                        id:indicator_lab
                BoxLayout:
                    id:board_addit
                    orientation: 'vertical'
                    size_hint:None,None
                    #width:min(self.parent.height,self.parent.width)
                    #height:min(self.parent.height,self.parent.width)
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        BoxLayout:
                            id:top
                            #size_hint_x:None
                            size_hint:None,None
                            #width: board.width
                            #pos:50,0
                            orientation: 'horizontal'
                    BoxLayout:
                        id:mid
                        orientation: 'horizontal'
                        size_hint:None,None
                        BoxLayout:
                            id:left
                            #size_hint:0.1,1
                            size_hint:None,None
                            orientation: 'vertical'
                        GridLayout:
                            id:board
                            #size_hint:1,1
                            size_hint:None,None
                            cols:8
                            rows:8
                        BoxLayout:
                            id:right
                            size_hint:None,None
                            #size_hint:0.1,1
                            orientation: 'vertical'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        BoxLayout:
                            id:bot
                            #size_hint_x:None
                            size_hint:None,None
                            #width: board.width
                            #pos:50,0
                            orientation: 'horizontal'